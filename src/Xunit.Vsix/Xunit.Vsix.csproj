<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>xunit.vsix</AssemblyName>
    <TargetFramework>net452</TargetFramework>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Platforms>AnyCPU;x86</Platforms>
    <Platform>x86</Platform>
    <AssemblyTitle>Xunit.Vsix</AssemblyTitle>
    <AssemblyCopyright>Copyright © Mobile Essentials 2015</AssemblyCopyright>
    <Authors>Daniel Cazzulino</Authors>
    <Company>Mobile Essentials</Company>
    <Product>Xunit.Vsix</Product>
    <RootNamespace>Xunit</RootNamespace>
    <IncludeWindowsInjectorContent>false</IncludeWindowsInjectorContent>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
  </PropertyGroup>
  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Xunit.Vsix.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\Xunit.Vsix.snk">
      <Link>Xunit.Vsix.snk</Link>
    </None>
    <None Include="Xunit.Vsix.props" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="GitInfo" Version="2.0.6" />
    <PackageReference Include="netfx-System.StringResources" Version="3.1.9" />
    <PackageReference Include="VSSDK.ComponentModelHost.11" Version="11.0.4" />
    <PackageReference Include="VSSDK.Shell.11" Version="11.0.4" />
    <PackageReference Include="Xamarin.Windows.Injector" Version="1.0.0-beta-build6" />
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="xunit.extensibility.execution" Version="2.3.1" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Runtime.Remoting" />
    <Reference Include="bootstrap">
      <HintPath>$(WindowsInjectorToolsPath)\$(Platform)\bootstrap.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  <Import Project="Xunit.Vsix.props" />
  <Import Project="..\Xunit.Vsix.targets" />
</Project>