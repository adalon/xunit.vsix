		<file src="..\Xunit.Vsix.Bootstrap\bin\xunit.vsix.bootstrap.pdb" target="lib\net45" />

		<file src="..\Xunit.Vsix\**\*.cs" target="src\Xunit.Vsix" exclude="**\bin\**\*.*;**\obj\**\*.*" />
		<file src="..\Xunit.Vsix\**\*.csproj" target="src\Xunit.Vsix" />
		<file src="..\Xunit.Vsix\**\*.props" target="src\Xunit.Vsix" />
		<file src="..\Xunit.Vsix\**\*.targets" target="src\Xunit.Vsix" />
