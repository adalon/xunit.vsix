		<file src="..\Xunit.Vsix\**\*.resx" target="src\Xunit.Vsix" />
		<file src="..\Xunit.Vsix.Bootstrap\bin\xunit.vsix.bootstrap.dll" target="src\Xunit.Vsix.Bootstrap\bin" />
		<file src="..\Xunit.Vsix.Bootstrap\bin\xunit.vsix.bootstrap.pdb" target="src\Xunit.Vsix.Bootstrap\bin" />
